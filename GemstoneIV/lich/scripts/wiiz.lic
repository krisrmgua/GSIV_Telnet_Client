loop {
    if Room.current.id.to_s =~ /^228$/
        Script.run('waggle', 'clu')
        Script.run('waggle', 'woory')
        Script.run('waggle', 'pristeen')
        Script.run('waggle', 'sluf')
        Script.run('waggle', 'monker')
        Script.run('waggle', 'sorci')
        sleep 60
    else
        line = matchtimeout 20, "just arrived", "arrives at"
        if line =~ /([A-Z,a-z]+) arrives at/
            castee = $1
            Script.run('waggle', "#{castee}")
        end
    end
}
