## Tap to heal
##

def matchfind2(*strings)
   regex = /#{strings.flatten.join('|').gsub('?', '(.+)')}/i
   if reobj = regex.match($lastline)
      ret = reobj.captures.compact
      if ret.length < 2
         return ret.first
      else
         return ret
      end
   end
end

loop {
	$lastline = get

	person = matchfind2 "? taps you lightly on the shoulder."
	if person
		Script.run("sheal", [person])
	end
}
